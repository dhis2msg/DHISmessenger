<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DhisTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>

    </style>

    <style name="DhisTheme.DhisActionBar"></style>

    <style name="DhisTheme.DhisActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="DhisTheme.DhisActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#1d5288</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>