<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dhis2.messaging"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="org.dhis2.messaging.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="org.dhis2.messaging.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/DhisTheme" >
        <activity
            android:name="org.dhis2.messaging.IntroActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.Home" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.RESTChatActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.RESTConversation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.IMChatActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.IMConversation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.NewMessageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.ComposeNewMessage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.InterpretationCommentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.InterpretationComment" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dhis2.messaging.ProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.Profile" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--
        activity
            android:name=".ZoomInterpretation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="org.dhis2.messaging.ZoomInterpretation" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity
        -->
        <activity
            android:name="org.dhis2.messaging.ConferenceChatActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.dhis2.messaging.IMConferenceChat" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name="org.dhis2.messaging.Utils.GCM.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>

        <service android:name="org.dhis2.messaging.Utils.GCM.GcmIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>